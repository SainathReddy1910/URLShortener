<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container">
        <center><h1 class="h1">URL Shortener</h1></center>
        <form action="/short" method="post">
            <input type="url" name="full" id="full" placeholder="URL" class="form-control">
            <button type="submit" class="btn btn-success">Shorten</button>
        </form>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>FULL URL</th>
                    <th>SHORT URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shorts.forEach(s => { %>
                    <tr>
                        <td><a href="<%= s.full %>"><%= s.full %></a></td>
                        <td><a href="<%= s.short %>"><%= s.short %></a></td>
                        <td><%= s.clicks %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
</html>